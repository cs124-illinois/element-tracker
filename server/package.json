{
  "private": "true",
  "name": "server",
  "version": "2023.1.0",
  "scripts": {
    "build": "rimraf dist && esbuild src/index.ts --log-level=error --sourcemap --bundle --platform=node --outfile=dist/index.js",
    "checker": "yarn depcheck && yarn prettier && yarn eslint && yarn tsc",
    "clean": "rimraf dist",
    "depcheck": "depcheck --ignore-dirs=dist --ignores=prettier-plugin-*,env-cmd,ts-node",
    "docker:build": "npm run build && docker build . -t cs124/element-tracker:latest && npm run docker:tag",
    "docker:push": "npm run build && docker buildx build . --platform=linux/amd64,linux/arm64/v8 --builder multiplatform --tag cs124/element-tracker:latest --tag cs124/element-tracker:$npm_package_version --push",
    "docker:tag": "docker tag cs124/element-tracker:latest cs124/element-tracker:$npm_package_version",
    "eslint": "eslint src/**",
    "ncu": "ncu",
    "prettier": "prettier -w --plugin=prettier-plugin-organize-imports . && prettier-package-json --write",
    "start": "nodemon",
    "tsc": "tsc --noEmit"
  },
  "dependencies": {
    "@cs124/element-tracker-types": "2023.1.0",
    "@cs124/pingpongws-server": "2023.1.0",
    "@koa/cors": "4.0.0",
    "@koa/router": "12.0.0",
    "@panva/hkdf": "1.0.2",
    "google-auth-library": "8.7.0",
    "http-terminator": "3.2.0",
    "jose": "4.11.2",
    "koa": "2.14.1",
    "koa-easy-ws": "2.1.0",
    "mongodb": "4.13.0",
    "mongodb-uri": "0.9.7",
    "runtypes": "6.6.0",
    "ws": "8.11.0"
  },
  "devDependencies": {
    "@types/koa": "2.13.5",
    "@types/koa__cors": "3.3.0",
    "@types/koa__router": "12.0.0",
    "@types/mongodb-uri": "0.9.1",
    "@types/ws": "8.5.4",
    "@typescript-eslint/eslint-plugin": "5.48.0",
    "@typescript-eslint/parser": "5.48.0",
    "depcheck": "1.4.3",
    "env-cmd": "10.1.0",
    "esbuild": "0.16.13",
    "eslint": "8.31.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-prettier": "4.2.1",
    "nodemon": "2.0.20",
    "npm-check-updates": "16.6.2",
    "prettier": "2.8.1",
    "prettier-package-json": "2.8.0",
    "prettier-plugin-organize-imports": "3.2.1",
    "rimraf": "3.0.2",
    "ts-node": "10.9.1",
    "typescript": "4.9.4"
  },
  "nodemonConfig": {
    "watch": [
      "package.json",
      "src/index.ts",
      ".env.development"
    ],
    "ext": "*.ts",
    "exec": "env-cmd -f .env.development ts-node src/index.ts"
  }
}
